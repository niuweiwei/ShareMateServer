<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sharemate.server.dao.UserMapper">
	
	<resultMap type="com.sharemate.server.entity.User" id="userMap">
		<id property="userId" column="user_id"/>
		<result property="userName" column="user_name"/>
		<result property="userPassword" column="user_password"/>
		<result property="userPhoto" column="user_photo"/>
		<result property="userSex" column="user_sex"/>
		<result property="userAddress" column="user_address"/>
		<result property="userBith" column="user_birth"/>
		<result property="userIntro" column="user_intro"/>
	</resultMap>
	<select id="getUserByUserId" resultMap="userMap">
		select * from user where user_id = #{id}
	</select>
</mapper>